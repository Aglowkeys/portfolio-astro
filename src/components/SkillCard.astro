---
type Props = {
  text: string;
  icon: string;
};

const { icon, text } = Astro.props;
---

<article>
  <div class="icon-container">
    <Fragment set:html={icon} />
  </div>
  <p>{text}</p>
</article>

<style>
  article {
    cursor: default;
    width: 6rem;
    display: flex;
    flex-direction: column;
    align-items: center;

    @media (max-width: 700px) {
      width: 5rem;
    }
  }

  .icon-container {
    width: 75px;
  }

  p {
    font-size: var(--body-sm);
    text-align: center;
    margin-top: 0.75rem;
  }
</style>
