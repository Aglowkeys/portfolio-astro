---
import SkillCard from "@/components/SkillCard.astro";
import CSS from "@/components/svg/CSS.astro?raw";
import Express from "@/components/svg/Express.astro?raw";
import HTML from "@/components/svg/HTML.astro?raw";
import JavaScript from "@/components/svg/JavaScript.astro?raw";
import NextJS from "@/components/svg/NextJS.astro?raw";
import NodeJS from "@/components/svg/NodeJS.astro?raw";
import PostgreSQL from "@/components/svg/PostgreSQL.astro?raw";
import React from "@/components/svg/React.astro?raw";
import Redux from "@/components/svg/Redux.astro?raw";
import Sass from "@/components/svg/Sass.astro?raw";
import TypeScript from "@/components/svg/TypeScript.astro?raw";
import AstroLogo from "@/components/svg/Astro.astro?raw";
import Vitest from "@/components/svg/Vitest.astro?raw";
import Jest from "@/components/svg/Jest.astro?raw";
import Cypress from "@/components/svg/Cypress.astro?raw";

const SKILLS = [
  { text: "HTML", icon: HTML },
  { text: "CSS", icon: CSS },
  { text: "JavaScript", icon: JavaScript },
  { text: "TypeScript", icon: TypeScript },
  { text: "React", icon: React },
  { text: "Redux", icon: Redux },
  { text: "Node.js", icon: NodeJS },
  { text: "Express", icon: Express },
  { text: "PostgreSQL", icon: PostgreSQL },
  { text: "Sass", icon: Sass },
  { text: "Next.js", icon: NextJS },
  { text: "Astro", icon: AstroLogo },
  { text: "Vitest", icon: Vitest },
  { text: "Jest", icon: Jest },
  { text: "Cypress", icon: Cypress },
];
---

<div class="skills-container">
  {SKILLS.map(({ icon, text }) => <SkillCard text={text} icon={icon} />)}
</div>

<style>
  .skills-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 4rem 1.5rem;

    @media (max-width: 700px) {
      gap: 3rem 1.5rem;
    }
  }
</style>
